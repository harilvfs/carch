#compdef carch

_carch() {
    local -a commands

    commands=(
        '--help:Show the help message'
        '-h:Show the help message'
        '--version:Show the program version'
        '-v:Show the program version'
        '--gen-config:Generate a default configuration file'
        '-c:Use the default configuration file'
        '--run-script:Run a specific script from the script directory'
        '-r:Run a specific script from the script directory'
        '--list-scripts:List all available scripts'
        '-l:List all available scripts'
        '--no-preview:Run without displaying script previews in menus (one-time)'
        '--log:Enable logging for the current session only'
        '--check-update:Check if a new version of Carch is available'
        '--update:Update Carch using the latest script'
        '--uninstall:Uninstall Carch and remove all associated files'
    )

    _arguments \
        '--help[Show the help message]' \
        '-h[Show the help message]' \
        '--version[Show the program version]' \
        '-v[Show the program version]' \
        '--gen-config[Generate a default configuration file]' \
        '-c[Use the default configuration file]' \
        '--run-script[Run a specific script]' \
        '-r[Run a specific script]' \
        '--list-scripts[List all available scripts]' \
        '-l[List all available scripts]' \
        '--no-preview[Run without displaying script previews in menus]' \
        '--log[Enable logging for the current session only]' \
        '--check-update[Check if a new version of Carch is available]' \
        '--update[Update Carch using the latest script]' \
        '--uninstall[Uninstall Carch and remove all associated files]'
}

_carch
